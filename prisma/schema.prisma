
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  title     String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      UserType
  Career Career[]

}

model Career {
  id        String   @id @default(cuid())
  title     String   @unique
  company   String
  description String
  location  String
  startDate DateTime
  endDate   DateTime?
  userId    String
  advertiser  User   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id        String   @id @default(cuid())
  message   String
  senderId  String
  receiverId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        String   @id @default(cuid())
  title     String   @unique
  description String
  url       String
  domain    Domain[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserType {
  Employee
  Customer
  Applicant
}

enum Domain {
  Tech
  Ecommerce
  EHealth
  Finance
  AI
  Management
  Art
  Education
}